<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:textColor">@color/TextPrimary</item>
        <item name="android:textSize">26sp</item>
        <item name="android:text">@string/settings_title</item>
    </style>

    <style name="TextViewHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/TextSecondary</item>
    </style>

    <style name="ScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="ImageViewProfilePicture">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:contentDescription">@string/settings_image_description</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="TextViewUsername">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginStart">120dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/TextPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextViewButtonPrimary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/TextPrimary</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextViewVersion">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextViewButtonSecondary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="HorizontalRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/HorizontalRow</item>
    </style>

    <style name="ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:bottomLeftRadius">10dp</item>
        <item name="android:bottomRightRadius">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:topLeftRadius">10dp</item>
        <item name="android:topRightRadius">10dp</item>
    </style>

    <style name="RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">14dp</item>
        <item name="android:textColor">@color/TextPrimary</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="RelativeLayoutUpdates">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/Background</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:padding">14dp</item>
    </style>

    <style name="TextViewUpdates">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColor">@color/TextPrimary</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>
</resources>